<h2>Create a new expense:</h2>

<form action="/expenses" method="post">
  <label for="expense-name">Name:</label>
  <input type="text" id="expense-name" name="name">

  <label for="expense-price">Price:</label>
  <input type="number" id="expense-price" name="price" min="0" step="0.01">

  <div>
    <h4>Category:</h4>

    <label for="food">Food</label>
    <input type="radio" id="food" name="expense-category" value="food">

    <label for="misc">Misc</label>
    <input type="radio" id="misc" name="expense-category" value="misc">
  </div>

  <button type="submit">Create</button>
</form>